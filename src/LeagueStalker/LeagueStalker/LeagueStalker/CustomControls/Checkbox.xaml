<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:CustomBehaviors="clr-namespace:LeagueStalker.Behaviors"
             x:Class="LeagueStalker.CustomControls.Checkbox" HeightRequest="24">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Start">
            <Grid>
                <Button x:Name="checkBoxButton" VerticalOptions="FillAndExpand" BorderColor="LightGray" BorderRadius="0" BorderWidth="1"
                    WidthRequest="24" BackgroundColor="White" HorizontalOptions="Start" Clicked="checkBoxButton_Clicked">

                </Button>

                <Image x:Name="checkBoxImage" Source="checkmark_24x24_white" IsVisible="False" HorizontalOptions="Start"/>
            </Grid>

            <Label x:Name="checkBoxText" Text="Checkbox" FontSize="16" FontFamily="Sagoe UI" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" TextColor="White"/>
        </StackLayout>
    </ContentView.Content>

    <!--Behaviors for the stacklayout-->
    <ContentView.Behaviors>
        <CustomBehaviors:CheckboxState/>
    </ContentView.Behaviors>
</ContentView>